import pandas as pd
import numpy as np

# Load dataset
df = pd.read_csv("churn_data.csv")

# Basic exploration
df.head()
df.info()
df.describe()

# Churn distribution
df['Churn'].value_counts(normalize=True)
from sklearn.preprocessing import LabelEncoder

le = LabelEncoder()
df['gender_encoded'] = le.fit_transform(df['gender'])
df = pd.get_dummies(df, columns=['InternetService', 'Contract'], drop_first=True)
from sklearn.preprocessing import OrdinalEncoder

ordinal_cols = ['PaymentMethod']
encoder = OrdinalEncoder()
df[ordinal_cols] = encoder.fit_transform(df[ordinal_cols])
from sklearn.preprocessing import MinMaxScaler

minmax = MinMaxScaler()
df[['MonthlyCharges_minmax']] = minmax.fit_transform(df[['MonthlyCharges']])
Q1 = df['MonthlyCharges'].quantile(0.25)
Q3 = df['MonthlyCharges'].quantile(0.75)
IQR = Q3 - Q1

df = df[(df['MonthlyCharges'] >= Q1 - 1.5 * IQR) &
        (df['MonthlyCharges'] <= Q3 + 1.5 * IQR)]
from scipy import stats

df = df[(np.abs(stats.zscore(df['tenure'])) < 3)]
# 1. Customer Lifetime Value
df['Customer_Lifetime_Value'] = df['MonthlyCharges'] * df['tenure']

# 2. Average Charges per Month
df['Avg_Charges'] = df['TotalCharges'] / (df['tenure'] + 1)

# 3. Long Term Customer Flag
df['Long_Term_Customer'] = (df['tenure'] > 24).astype(int)

# 4. High Value Customer
df['High_Value_Customer'] = (df['MonthlyCharges'] > 70).astype(int)

# 5. Payment Efficiency
df['Payment_Efficiency'] = df['TotalCharges'] / (df['MonthlyCharges'] + 1)
import seaborn as sns
import matplotlib.pyplot as plt

corr = df.corr()
plt.figure(figsize=(12,8))
sns.heatmap(corr, cmap='coolwarm')
plt.show()
